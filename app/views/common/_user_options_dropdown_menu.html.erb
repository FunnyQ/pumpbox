<% if student_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user"></i> Hello, <%= current_student.username %> <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
      <li>
        <%= link_to edit_student_registration_path do %>
          <i class="fa fa-edit"></i> 編輯個人資料
        <% end %>
      </li>
      <!-- other function here -->
      <li class="divider"></li>
      <li>
        <%= link_to destroy_student_session_path, method: :delete do%>
          <i class="fa fa-sign-out"></i> 登出
        <% end %>
      </li>
    </ul>
  </li>
<% else %>
  <li>
    <%= link_to new_student_registration_path do %>
      <i class="fa fa-user-plus"></i> 註冊
    <% end %>
  </li>
  <li>
    <%= link_to new_student_session_path do%>
      <i class="fa fa-sign-in"></i> 登入
    <% end %>
  </li>
<% end %>
