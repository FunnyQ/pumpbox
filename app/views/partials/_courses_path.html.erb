<div class="courses-path-wrapper">
  <div class="courses-path-inner">
    <div class="courses-list-wrapper">
      <% @courses.each_with_index do |course, index| %>
        <div class="course-item">
          <div class="point">
            <%= render_course_status(course[:status]) %>
          </div>
          <div class="title">
            <h4>
              <%= link_to course[:path] do %>
                <%= course[:title] %>
              <% end %>
            </h4>
          </div>
          <div class="description">
            <h5>關卡描述</h5>
            <p><%= course[:description] %></p>
            <h5>子關卡</h5>
            <ul>
              <% course[:sub_titles].each do |sub_title| %>
                <li><%= sub_title %></li>
              <% end %>
            </ul>
            <h5>可獲得的經驗值</h5>
            <span><%= course[:exp] %></span> EXP
            <h5>可獲得的金幣</h5>
            <span><%= course[:money] %> 枚</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
