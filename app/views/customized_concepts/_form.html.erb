<%= simple_form_for([@course, @customized_concept]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :video %>
    <%= f.input :lecture %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
