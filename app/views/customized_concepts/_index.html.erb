<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Title</th>
      <th>Description</th>
      <th>Video</th>
      <th>Lecture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customized_concepts.each do |customized_concept| %>
      <tr>
        <td><%= customized_concept.course_id %></td>
        <td><%= customized_concept.title %></td>
        <td><%= customized_concept.description %></td>
        <td><%= customized_concept.video %></td>
        <td><%= customized_concept.lecture %></td>
        <td><%= link_to 'Show', course_customized_concept_path(customized_concept.course_id, customized_concept) %></td>
        <td><%= link_to 'Edit', edit_course_customized_concept_path(customized_concept.course_id, customized_concept) %></td>
        <td><%= link_to 'Destroy', course_customized_concept_path(customized_concept.course_id, customized_concept), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>




<div class="courses-path-wrapper">
  <div class="courses-path-inner">
    <div class="courses-list-wrapper">
      <% @customized_concepts.each_with_index do |course, index| %>
        <div class="course-item">
          <div class="point">
            <%= render_course_status(course[:status]) %>
          </div>
          <div class="title">
            <h4>
              <%= link_to course_customized_concept_path(@course, course) do %>
                <%= course[:title] %>
              <% end %>
            </h4>
          </div>
          <div class="description"> 
            <h5>課程描述</h5>
            <p><%= course[:description] %></p>
           
              <h5>子關卡</h5>
              <ul>
                <li> test </li>
              </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
